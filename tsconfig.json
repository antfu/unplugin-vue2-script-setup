{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "resolveJsonModule": true
  }
}
